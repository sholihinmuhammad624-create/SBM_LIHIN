#include <Wire.h>
#include <RTClib.h>

RTC_DS3231 rtc;

void setup() {
  Serial.begin(9600);
  while (!Serial);

  if (!rtc.begin()) {
    Serial.println("RTC TIDAK TERDETEKSI!");
    while (1);
  }

  
  rtc.adjust(DateTime(2025, 12, 5, 16, 12, 0));  
  // Format: (Tahun, Bulan, Hari, Jam, Menit, Detik)

  Serial.println("RTC DISSET KE WAKTU SEKARANG!");
}

void loop() {
  DateTime now = rtc.now();

  Serial.print(now.day());
  Serial.print("/");
  Serial.print(now.month());
  Serial.print("/");
  Serial.print(now.year());
  Serial.print("  ");

  Serial.print(now.hour());
  Serial.print(":");
  Serial.print(now.minute());
  Serial.print(":");
  Serial.println(now.second());

  delay(1000);
}
